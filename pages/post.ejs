<html lang="en">

<head>
    <%- include('header', {title: "Justin O'Boyle | " + post.title, description: post.title}) %>
        <link rel="stylesheet" href="/static/post.css">
</head>

<body>
    <div class="blog-layout mdl-layout mdl-layout--fixed-header mdl-js-layout mdl-color--grey-100">
        <header class="blog-header mdl-layout__header mdl-layout__header--scroll mdl-color--grey-100 mdl-color-text--grey-800">
            <div class="mdl-layout__header-row">
                <span class="mdl-layout-title">Justin O'Boyle</span>
                <div class="mdl-layout-spacer"></div>
                    <button href="/" onclick="window.location.href='/'" class="mdl-button mdl-js-button mdl-js-ripple-effect">
                       Home
                    </button>
            </div>
        </header>
        <div class="blog-ribbon"></div>
        <main class="blog-main mdl-layout__content">
            <div class="blog-container mdl-grid">
                <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
                <div class="blog-content mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
                    <%- post.content %>
                </div>
            </div>
        </main>
    </div>

    <script src="https://code.getmdl.io/1.1.3/material.min.js"></script>
</body>

</html>